{
  "name": "global-color-picker",
  "displayName": "Global color picker",
  "description": "A simple Google Chrome extension for picking color in all of your screen.",
  "version": "2.0.2",
  "author": "reemo",
  "packageManager": "pnpm@7.1.9",
  "scripts": {
    "start": "next start",
    "dev": "run-p dev:*",
    "dev:plasmo": "plasmo dev",
    "dev:next": "next dev --port 1947",
    "build": "run-p build:*",
    "build:plasmo": "plasmo build",
    "build:next": "next build"
  },
  "dependencies": {
    "@mantine/core": "^4.2.9",
    "@mantine/hooks": "^4.2.9",
    "@mantine/next": "^4.2.9",
    "@mantine/notifications": "^4.2.9",
    "@plasmohq/storage": "^0.5.2",
    "next": "12.1.6",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "tabler-icons-react": "^1.49.0"
  },
  "devDependencies": {
    "@plasmohq/rps": "1.3.4",
    "@trivago/prettier-plugin-sort-imports": "3.2.0",
    "@types/chrome": "0.0.190",
    "@types/node": "17.0.43",
    "@types/react": "18.0.12",
    "@types/react-dom": "18.0.5",
    "plasmo": "0.42.7",
    "prettier": "2.7.0",
    "typescript": "4.7.3"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*"
    ],
    "permissions": [
      "tabs"
    ]
  }
}
